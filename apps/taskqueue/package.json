{
  "dependencies": {
    "@nestjs/mapped-types": "*",
    "screenshot-desktop": "^1.15.2"
  },
  "name": "@tasks/taskqueue",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@tasks/taskqueue:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@tasks/taskqueue:build:development"
          },
          "production": {
            "buildTarget": "@tasks/taskqueue:build:production"
          }
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "outputs": [
          "{workspaceRoot}/coverage/{projectRoot}"
        ],
        "options": {
          "jestConfig": "apps/taskqueue/jest.config.ts"
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/taskqueue/Dockerfile . -t tasks-taskqueue"
      }
    }
  },
  "devDependencies": {
    "@nx/vite": "^21.2.2"
  }
}
